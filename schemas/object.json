{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Object",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the object"
        },
        "name": {
            "type": "string",
            "description": "Name of the object"
        },
        "description": {
            "type": "string",
            "description": "Description of the object"
        },
        "ownerId": {
            "type": "string",
            "description": "ID of the person who owns the object"
        }
    },
    "required": [
        "id",
        "name"
    ]
}