{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Location",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the location"
      },
      "name": {
        "type": "string",
        "description": "Name of the location"
      },
      "latitude": {
        "type": "number",
        "description": "Latitude of the location"
      },
      "longitude": {
        "type": "number",
        "description": "Longitude of the location"
      }
    },
    "required": ["id", "name"]
  }